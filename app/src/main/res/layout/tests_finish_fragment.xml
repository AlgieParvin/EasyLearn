<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:layout_marginBottom="50dp"
        android:text="You finished the test" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tests_results_correct_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_gravity="left"
            android:textSize="24sp"
            android:layout_marginBottom="10dp"
            android:text="Correct answers:" />

        <TextView
            android:id="@+id/tests_results_incorrect_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_gravity="left"
            android:textSize="24sp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tests_results_correct_label"
            android:text="Wrong answers:" />

        <TextView
            android:id="@+id/tests_results_correct_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:textSize="24sp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:layout_toRightOf="@id/tests_results_correct_label" />

        <TextView
            android:id="@+id/tests_results_incorrect_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:textSize="24sp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:layout_below="@+id/tests_results_correct_answers"
            android:layout_toRightOf="@id/tests_results_incorrect_label" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/tests_finish_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_alignParentBottom="true"
                android:text="Finish"/>

            <Button
                android:id="@+id/tests_mistakes_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="Mistakes"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>