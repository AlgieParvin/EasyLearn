<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tests_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="75dp">

    <TextView
        android:id="@+id/test_question_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.38"
        android:padding="16dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/tests_first_answer_button"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:background="@drawable/answer_button" />

    <Button
        android:id="@+id/tests_second_answer_button"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:background="@drawable/answer_button" />

    <Button
        android:id="@+id/tests_third_answer_button"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:background="@drawable/answer_button" />

    <Button
        android:id="@+id/tests_fourth_answer_button"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_width="250dp"
        android:background="@drawable/answer_button" />

    <Button
        android:id="@+id/tests_fifth_answer_button"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_width="250dp"
        android:background="@drawable/answer_button" />

</LinearLayout>
